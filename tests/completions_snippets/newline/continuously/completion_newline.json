{
  "description": "Completion: newline, continuously triggered: https://kite.quip.com/LVIZAGwNQKEg/Spec-Code-Completions-Editor-Plugins-UIUX-WIP#STDACAEdWbt",
  "setup": {
    "completion_snippets": true,
    "completion_snippets": true,
    "whitelist": [
      "data/whitelisted"
    ],
    "kited": "authenticated",
    "routes": [
      {
        "match": "^/clientapi/editor/complete$",
        "response": {
          "status": 200,
          "body": "data/responses/completions/foo.json"
        }
      }
    ]
  },
  "test": [
    {
      "description": "open new file",
      "step": "action",
      "type": "new_file",
      "properties": {
        "file": "data/whitelisted/file.py",
        "content": "foo"
      }
    },
    {
      "description": "moving cursor to the end",
      "step": "action",
      "type": "move_cursor",
      "properties": {
        "offset": 3
      }
    },
    {
      "description": "typing a newline",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "\n"
      }
    },
    {
      "description": "triggers completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/complete",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "foo\n",
          "position": {
            "begin": 4,
            "end": 4
          }
        }
      }
    },
    {
      "description": "typing another newline",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "\n"
      }
    },
    {
      "description": "triggers completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/complete",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "foo\n\n",
          "position": {
            "begin": 5,
            "end": 5
          }
        }
      }
    }
  ]
}
