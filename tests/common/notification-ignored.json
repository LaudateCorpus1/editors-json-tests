{
  "description": "Tests whitelist notifications with ignored files",
  "setup": {
    "whitelist": ["data/whitelisted"],
    "ignored": ["data/whitelisted"],
    "kited": "authenticated"
  },
  "test": [
    {
      "description": "opening an ignored file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/whitelisted/file.py"
      }
    },
    {
      "description": "calls notify endpoint",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/permissions/notify?filename=${editors.data/whitelisted/file.py.filename}",
        "method": "GET"
      }
    },
    {
      "description": "doesn't call projectdir endpoint",
      "step": "expect",
      "type": "request_count",
      "properties": {
        "path": "/clientapi/projectdir?filename=${editors.data/whitelisted/file.py.filename}",
        "method": "GET",
        "count": 0
      }
    },
    {
      "description": "triggers no notifications",
      "step": "expect",
      "type": "notification_count",
      "properties": {
        "level": "warning",
        "count": 0
      }
    }
  ]
}
