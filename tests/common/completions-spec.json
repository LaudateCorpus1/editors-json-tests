{
  "description": "Tests code completion as defined in behavioural spec",
  "setup": {
    "whitelist": [
      "data/whitelisted"
    ],
    "kited": "authenticated"
  },
  "test": [
    {
      "description": "opening a file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/whitelisted/empty.py"
      }
    },
    {
      "description": "typing 'import' in the buffer",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "import j"
      }
    },
    {
      "description": "triggers completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "<<plugin>>",
          "filename": "<<editor.filename>>",
          "text": "import j",
          "cursor_runes": 8
        }
      }
    },
    {
      "description": "typing 'from f' in the buffer",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "\nfrom f"
      }
    },
    {
      "description": "triggers completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "<<plugin>>",
          "filename": "<<editor.filename>>",
          "text": "import j\nfrom f",
          "cursor_runes": 15
        }
      }
    },
    {
      "description": "typing 'from foo import j' in the buffer",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "oo import j"
      }
    },
    {
      "description": "triggers completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "<<plugin>>",
          "filename": "<<editor.filename>>",
          "text": "import j\nfrom foo import j",
          "cursor_runes": 26
        }
      }
    },
    {
      "description": "typing the first characters of an identifier",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "\nf"
      }
    },
    {
      "description": "triggers completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "<<plugin>>",
          "filename": "<<editor.filename>>",
          "text": "import j\nfrom foo import j\nf",
          "cursor_runes": 28
        }
      }
    },
    {
      "description": "typing a dot after an identifier",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "."
      }
    },
    {
      "description": "triggers completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "<<plugin>>",
          "filename": "<<editor.filename>>",
          "text": "import j\nfrom foo import j\nf.",
          "cursor_runes": 29
        }
      }
    },
    {
      "description": "triggers a new completion request",
      "step": "expect",
      "type": "request_count",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "count": 5
      }
    },
    {
      "description": "manual invocation",
      "step": "action",
      "type": "request_completion",
      "properties": {
      }
    },
    {
      "description": "triggers a new completion request",
      "step": "expect",
      "type": "request_count",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "count": 6
      }
    }
  ]
}
