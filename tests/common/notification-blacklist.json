{
  "description": "Tests whitelist notifications with blacklisted files",
  "setup": {
    "whitelist": [],
    "blacklist": [
      "data/blacklisted"
    ],
    "kited": "authenticated"
  },
  "test": [
    {
      "description": "opening a blacklisted file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/blacklisted/file.py"
      }
    },
    {
      "description": "calls notify endpoint",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/permissions/notify?filename=<<editor.filename>>",
        "method": "GET"
      }
    },
    {
      "description": "doesn't call projectdir endpoint",
      "step": "expect",
      "type": "request_count",
      "properties": {
        "path": "/clientapi/projectdir?filename=<<editor.filename>>",
        "method": "GET",
        "count": 0
      }
    },
    {
      "description": "triggers no notifications",
      "step": "expect",
      "type": "notification_count",
      "properties": {
        "level": "warning",
        "count": 0
      }
    }
  ]
}
