{
  "description": "Test the hover feature in a blacklisted file",
  "setup": {
    "blacklist": [
      "data/blacklisted"
    ],
    "kited": "authenticated"
  },
  "test": [
    {
      "description": "opening a blacklisted file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/blacklisted/file.py"
      }
    },
    {
      "description": "moving cursor over identifier",
      "step": "action",
      "type": "move_selection",
      "properties": {
        "offset": 9
      }
    },
    {
      "description": "requesting hover in a blacklisted file",
      "step": "action",
      "type": "request_hover",
      "properties": {
      }
    },
    {
      "description": "sends no hover request (it's supressed by the previous 403 event response)",
      "step": "expect",
      "type": "request_count",
      "properties": {
        "path": "/api/buffer/intellij/<<editor.filename_escaped>>/<<editor.hash>>/hover?cursor_runes=<<editor.offset>>",
        "method": "GET",
        "count": 0
      }
    }
  ]
}
