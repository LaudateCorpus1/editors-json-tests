{
  "description": "Event with kite not authenticated",
  "setup": {
    "kited": "unlogged"
  },
  "test": [
    {
      "description": "opening a file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/whitelisted/file.py"
      }
    },
    {
      "description": "does not send focus event",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/event",
        "method": "POST",
        "body": "data/http/event/file_request_focus.json"
      }
    },
    {
      "description": "moving the cursor",
      "step": "action",
      "type": "move_cursor",
      "properties": {
        "offset": 11
      }
    },
    {
      "description": "does not send selection event",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/event",
        "method": "POST",
        "body": "data/http/event/file_request_selection.json"
      }
    },
    {
      "description": "typing in the buffer",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "\n"
      }
    },
    {
      "description": "does not send edit event",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/event",
        "method": "POST",
        "body": {
          "source": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "import json\n",
          "action": "edit",
          "selections": [
            {
              "start": 12,
              "end": 12
            }
          ]
        }
      }
    }
  ]
}
