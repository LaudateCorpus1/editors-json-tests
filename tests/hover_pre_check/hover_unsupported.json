{
  "description": "Test the hover feature on an unsupported platform",
  "live_environment": false,
  "setup": {
    "whitelist": [
      "data/whitelisted"
    ],
    "kited": "unsupported"
  },
  "test": [
    {
      "description": "opening a whitelisted file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/whitelisted/file.py"
      }
    },
    {
      "description": "moving cursor over identifier",
      "step": "action",
      "type": "move_cursor",
      "properties": {
        "offset": 9
      }
    },
    {
      "description": "requesting hover",
      "step": "action",
      "type": "request_hover",
      "properties": {
      }
    },
    {
      "description": "sends no hover request",
      "step": "expect",
      "type": "request_count",
      "properties": {
        "path": "/api/buffer/${plugin}/${editors.data/whitelisted/file.py.filename_escaped}/${editors.data/whitelisted/file.py.hash}/hover?cursor_runes=${editors.data/whitelisted/file.py.offset}",
        "method": "GET",
        "count": 0
      }
    }
  ]
}
