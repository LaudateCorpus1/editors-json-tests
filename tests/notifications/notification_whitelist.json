{
  "description": "Tests whitelist notifications with undefined whitelisting",
  "live_environment": false,
  "setup": {
    "whitelist": [],
    "kited": "authenticated"
  },
  "test": [
    {
      "description": "opening a non-whitelisted file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/whitelisted/file.py"
      }
    },
    {
      "description": "calls notify endpoint",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/permissions/notify?filename=${editors.data/whitelisted/file.py.filename}",
        "method": "GET"
      }
    },
    {
      "description": "calls projectdir endpoint",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/projectdir?filename=${editors.data/whitelisted/file.py.filename}",
        "method": "GET"
      }
    },
    {
      "description": "shows a warning notification",
      "step": "expect",
      "type": "notification",
      "properties": {
        "level": "warning",
        "message": "Kite is not whitelisted for ${editors.data/whitelisted/file.py.filename}"
      }
    },
    {
      "description": "Updating the whitelist",
      "step": "action",
      "type": "update_whitelist",
      "properties": {
        "whitelist": [
          "data/whitelisted/"
        ]
      }
    },
    {
      "description": "and opening another whitelisted file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/whitelisted/file2.py"
      }
    },
    {
      "description": "will not call notify endpoint",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/permissions/notify?filename=${editors.data/whitelisted/file2.py.filename}",
        "method": "GET"
      }
    }
  ]
}
