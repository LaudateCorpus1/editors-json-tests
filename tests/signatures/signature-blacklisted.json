{
  "description": "Signature completion workflow in blacklisted file",
  "setup": {
    "blacklist": [
      "data/blacklisted"
    ],
    "kited": "authenticated"
  },
  "test": [
    {
      "description": "opening a file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/blacklisted/file.py"
      }
    },
    {
      "description": "moving the cursor",
      "step": "action",
      "type": "move_cursor",
      "properties": {
        "offset": 11
      }
    },
    {
      "description": "and typing a function call",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "\njson.dumps("
      }
    },
    {
      "description": "does not send a signature request",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/signatures",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/blacklisted/file.py.filename}",
          "text": "import json\njson.dumps(",
          "cursor_runes": 23
        }
      }
    }
  ]
}
