{
  "description": "Signature completion workflow",
  "setup": {
    "whitelist": [
      "data/whitelisted"
    ],
    "kited": "authenticated"
  },
  "test": [
    {
      "description": "opening a file",
      "step": "action",
      "type": "open",
      "properties": {
        "file": "data/whitelisted/file.py"
      }
    },
    {
      "description": "moving the cursor",
      "step": "action",
      "type": "move_cursor",
      "properties": {
        "offset": 11
      }
    },
    {
      "description": "and typing a function call",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "\njson.dumps("
      }
    },
    {
      "description": "sends a signature request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/signatures",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "import json\njson.dumps(",
          "cursor_runes": 23
        }
      }
    },
    {
      "description": "typing a value",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "123"
      }
    },
    {
      "description": "sends a new signature request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/signatures",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "import json\njson.dumps(123",
          "cursor_runes": 26
        }
      }
    },
    {
      "description": "Typing a comma after the value",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": ","
      }
    },
    {
      "description": "sends a new signature request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/signatures",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "import json\njson.dumps(123,",
          "cursor_runes": 27
        }
      }
    },
    {
      "description": "updating the signature response to return 404 and",
      "step": "action",
      "type": "update_route",
      "properties": {
        "match": "^/clientapi/editor/signatures$",
        "response": {
          "status": 404,
          "body": "data/responses/signature.json"
        }
      }
    },
    {
      "description": "Typing the closing parenthesis ')'",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": ")"
      }
    },
    {
      "description": "triggers no signature request",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/signatures",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "import json\njson.dumps(123,)",
          "cursor_runes": 28
        }
      }
    }
  ]
}
