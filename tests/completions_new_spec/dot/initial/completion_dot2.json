{
  "description": "Completion: dot, continuously triggered: https://kite.quip.com/LVIZAGwNQKEg/Spec-Code-Completions-Editor-Plugins-UIUX-WIP#STDACAQGQQx",
  "setup": {
    "whitelist": [
      "data/whitelisted"
    ],
    "kited": "authenticated",
    "routes": [
      {
        "match": "^/clientapi/editor/completions$",
        "response": {
          "status": 200,
          "body": "data/responses/completions/foo.json"
        }
      }
    ]
  },
  "test": [
    {
      "description": "open new file",
      "step": "action",
      "type": "new_file",
      "properties": {
        "file": "data/whitelisted/new_file_dot2.py",
        "content": "foo[1, "
      }
    },
    {
      "description": "moving cursor to the end",
      "step": "action",
      "type": "move_cursor",
      "properties": {
        "offset": 7
      }
    },
    {
      "description": "typing '.'",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "."
      }
    },
    {
      "description": "sends completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/new_file_dot2.py.filename}",
          "text": "foo[1, .",
          "cursor_runes": 8
        }
      }
    },
    {
      "description": "typing '.'",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "."
      }
    },
    {
      "description": "sends NO completion request",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/new_file_dot2.py.filename}",
          "text": "foo[1, ..",
          "cursor_runes": 9
        }
      }
    }
  ]
}
