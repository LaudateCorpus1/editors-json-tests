{
  "description": "Completion spec: alphabetic character, initially triggered, https://kite.quip.com/LVIZAGwNQKEg/Spec-Code-Completions-Editor-Plugins-UIUX-WIP#STDACAKyeqU",
  "setup": {
    "whitelist": [
      "data/whitelisted"
    ],
    "kited": "authenticated",
    "routes": [
      {
        "match": "^/clientapi/editor/completions$",
        "response": {
          "status": 200,
          "body": "data/responses/completions/foo.json"
        }
      }
    ]

  },
  "test": [
    {
      "description": "start with an empty file",
      "step": "action",
      "type": "new_file",
      "properties": {
        "file": "data/whitelisted/file.py",
        "content": ""
      }
    },
    {
      "description": "typing 'f'",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "f"
      }
    },
    {
      "description": "sends a completion request",
      "step": "expect",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "f",
          "cursor_runes": 1
        }
      }
    },
    {
      "description": "typing 'o'",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "o"
      }
    },
    {
      "description": "sends NO completion request",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "fo",
          "cursor_runes": 2
        }
      }
    },
    {
      "description": "typing 'o'",
      "step": "action",
      "type": "input_text",
      "properties": {
        "text": "o"
      }
    },
    {
      "description": "sends NO completion request",
      "step": "expect_not",
      "type": "request",
      "properties": {
        "path": "/clientapi/editor/completions",
        "method": "POST",
        "body": {
          "editor": "${plugin}",
          "filename": "${editors.data/whitelisted/file.py.filename}",
          "text": "foo",
          "cursor_runes": 3
        }
      }
    }
  ]
}
